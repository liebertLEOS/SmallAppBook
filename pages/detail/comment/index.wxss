/* pages/detail/comment/index.wxss */
.head{
  height: 40rpx;
  line-height: 40rpx;
  padding: 20rpx;
  font-size: 35rpx;
  color: #333;
}
.body{
  padding: 20rpx;
  background-color: #fff;
}
.body textarea{
  width: 100%;
  height: 200rpx;
  font-size: 30rpx;
}
.foot{
  padding: 30rpx 20rpx;
}
.foot .btn{
  font-size: 35rpx;
  text-align: center;
  border-radius: 8rpx;
}
.btn-submit{
  color: #fff;
  background-color: #ff812d;
}
.comment{
  padding: 20rpx;
}
.comment .comment-head{
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 35rpx;
  color: #666;
  position: relative;
}
.comment .comment-head text{  background: #efefef;
  padding: 0rpx 20rpx;
  }
.comment .comment-head::after{
  position: absolute;
  content: "";
  width: 100%;
  height: 1rpx;
  background-color: #ddd;
  top: 20rpx;
  left: 0rpx;
  z-index: -1;
}
.comment-list{
  margin-top: 40rpx;
}
.comment-list .item{
  font-size: 30rpx;
  color: #333;
  margin-bottom: 40rpx;
}
.comment-list .item:after{
  content: '';
  display: block;
  clear: both;
  visibility: hidden;
}
.comment-list .item .user-avatar{
  width: 15%;
  border-radius: 2rpx;
  overflow: hidden;
  float: left;
}
.comment-list .item .user-avatar image{
  width: 80rpx;
  height: 80rpx;
}
.comment-list .item .item-main{
  width: 85%;
  float: right;
}
.item-main .item-head{
  display: flex;
  flex: column;
  justify-content: space-between;
  color: #999;
}
.item-main .item-head .istop{
  margin: 0 10rpx;
  font-size: 25rpx;
  border-radius: 20rpx;
  padding:0 18rpx;
  border: 1px solid #999;
}
.item-main .item-head .star i{
  margin-right: 10rpx;
  color: #4f7a98;
}
.item-main .user-say{
  width: 100%;
}
.user-say .content{
  margin-top: 10rpx;
  margin-bottom: 10rpx; 
}
.comment-list .time{
  display: block;
  color: #999;
  font-size: 25rpx;
  margin-bottom: 20rpx;
}
.op-delete{
  color: #4f7a98;
  margin: 0 20rpx;
}
.line{
  display: block;
  width: 100%;
  height: 1rpx;
  background-color: #ddd;
  margin: 10rpx 0;
}