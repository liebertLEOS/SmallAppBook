/* pages/detail/index/index.wxss */
.article{
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: space-between;
  background-color: #fff;
}
.article-title{
  height: 50rpx;
  line-height:50rpx;
  font-size: 40rpx;
  margin-bottom: 10rpx;
}
.article-meta{
  font-size: 30rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #999;
}
.article-content{
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  font-size: 30rpx;
}
.article-comment{
  padding: 20rpx;
}
.article-comment .comment-head{
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 35rpx;
  color: #666;
  position: relative;
}
.article-comment .comment-head text{  background: #efefef;
  padding: 0rpx 20rpx;
  }
.article-comment .comment-head::after{
  position: absolute;
  content: "";
  width: 100%;
  height: 1rpx;
  background-color: #ddd;
  top: 20rpx;
  left: 0rpx;
  z-index: -1;
}
.article-comment .write-comment{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  color: #4f7a98;
  display: flex;
  justify-content: flex-end;
  margin: 20rpx 0rpx;
}
.write-comment i{
  margin-top: 8rpx;
  margin-left: 10rpx;
}
.comment-list .item{
  font-size: 30rpx;
  color: #333;
  margin-bottom: 40rpx;
}
.comment-list .item:after{
  content: '';
  display: block;
  clear: both;
  visibility: hidden;
}
.comment-list .item .user-avatar{
  width: 15%;
  border-radius: 2rpx;
  overflow: hidden;
  float: left;
}
.comment-list .item .user-avatar image{
  width: 80rpx;
  height: 80rpx;
}
.comment-list .item .item-main{
  width: 85%;
  float: right;
}
.item-main .item-head{
  display: flex;
  flex: column;
  justify-content: space-between;
  color: #999;
}
.item-main .item-head .istop{
  margin: 0 10rpx;
  font-size: 25rpx;
  border-radius: 20rpx;
  padding:0 18rpx;
  border: 1px solid #999;
}
.item-main .item-head .star i{
  margin-right: 10rpx;
  color: #4f7a98;
}
.item-main .user-say{
  width: 100%;
}
.user-say .content{
  margin-top: 10rpx;
  margin-bottom: 10rpx; 
}
.comment-list .time{
  display: block;
  color: #999;
  font-size: 25rpx;
  margin-bottom: 20rpx;
}
.line{
  display: block;
  width: 100%;
  height: 1rpx;
  background-color: #ddd;
  margin: 10rpx 0;
}
.author-reply .reply-head{
  height: 30rpx;
  line-height: 30rpx;
  border-left: 8rpx solid #66dc58;
  display: flex;
  flex: column;
  justify-content: space-between;
  padding-left: 10rpx;
  color: #999;
  margin: 20rpx 0rpx;
}
.author-reply .reply-head .star i{
  margin-right: 10rpx;
  color: #4f7a98;
}
.author-reply .reply-content{
  padding-left: 18rpx;
}
.author-reply .reply-content text{
  display: block;
}
.author-reply .reply-content .content{
  margin-top: 10rpx;
  margin-bottom: 10rpx; 
}
.article-write-comment{
  height: 100%;
  width: 100%;
  position: absolute;
  background-color: #efefef;
}