/**index.wxss**/
.page__bd {
  padding-bottom: 0;
}
.news-item-container {
  padding-top: 10rpx;
}
.swiper{
  height:240rpx;
  margin-left:14rpx;
  margin-right:14rpx;
  margin-top:14rpx;
  background-color: #fff;
}
.swipe-wrapper{
  display: block;
  width: 100%;
  height: 340rpx;
  position: relative;
}
.swipe-wrapper image{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.swiper-title{
  position: absolute;
  left: 0rpx;
  bottom: 50rpx;
  font-size: 30rpx;
  text-align: center;
  width: 100%;
}
.news-item {
  background-color: white;
  margin-left:14rpx;
  margin-right:14rpx;
  margin-bottom:14rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  border-radius: 8rpx;
}
.navigator-hover{
  background-color: #f5f5f5;
}
.news-item navigator{
  padding: 25rpx;
}
.news-item-txt {
  width: 100%;
  align-self: stretch;
  align-items: flex-start;
  justify-content: flex-start;
}
.news-item-name {
  display: block;
  width: 100%;
  font-size: 35rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #515151;
}
.news-item-desc {
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  color: #7b7b7b;
}
.loading{
  font-size: 30rpx;
  color: #7b7b7b; 
  text-align: center;
  margin-bottom:14rpx;
}
.loading i{
  margin-right: 10rpx;
}
.loading.complete:before{  
  display: none;  
}  